@model FysicsLeague.Models.Prefix

<br />
<h2 class="text-info">@(Model.Name==null ? "Create": "Edit" ) Book</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post" asp-action="Upsert">
        @if (Model.Name == null)
        {
            <input type="hidden" asp-for="Name" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control"></input>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="Value"></label>
            </div>
            <div class="col-6">
                <input asp-for="Value" class="form-control"></input>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Name==null ? "Create" : "Update" )
                </button>
            </div>
            <div class="col-6">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
